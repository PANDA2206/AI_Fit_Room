{
  "name": "virtual-tryon-app",
  "version": "1.0.0",
  "description": "Real-time virtual try-on application with camera feed",
  "main": "server/index.js",
  "scripts": {
    "dev": "node server/index.js",
    "server": "node server/index.js",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:prod:pull": "docker compose -f docker-compose.prod.yml --env-file .env.prod pull",
    "docker:prod:up": "docker compose -f docker-compose.prod.yml --env-file .env.prod up -d --remove-orphans",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml --env-file .env.prod down"
  },
  "keywords": ["virtual-tryon", "camera", "real-time", "fashion"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "socket.io": "^4.6.1",
    "dotenv": "^16.3.1"
  }
}
