# Public app URL used for backend Socket.IO CORS and client callbacks
PUBLIC_APP_URL=https://app.example.com

# Image tags produced by CI/CD
FRONTEND_IMAGE=ghcr.io/panda2206/ai-fit-room-frontend:latest
BACKEND_IMAGE=ghcr.io/panda2206/ai-fit-room-backend:latest
RAG_IMAGE=ghcr.io/panda2206/ai-fit-room-rag-service:latest

# Optional custom host port for reverse-proxy
PROXY_PORT=80

# PostgreSQL (backend product/user/try-on persistence)
# For Supabase, set DATABASE_URL and leave DB_HOST/DB_USER/DB_PASSWORD unused.
DATABASE_URL=
DB_USER=app_user
DB_PASSWORD=replace-with-strong-db-password
DB_NAME=virtual_tryon
DB_SSL=false
DB_SEED_DEFAULT_PRODUCTS=false

# Auth (JWT)
JWT_SECRET=replace-with-long-random-secret
JWT_EXPIRES_IN=12h
PASSWORD_SALT_ROUNDS=10

# Backend + Weaviate
WEAVIATE_API_KEY=replace-with-strong-key
RAG_TIMEOUT_MS=25000

# LLM provider keys (set only what you use)
OPENAI_API_KEY=
HF_API_TOKEN=
HUGGINGFACE_API_KEY=
HF_MODEL=mistralai/Mistral-7B-Instruct-v0.2
HF_FALLBACK_MODEL=meta-llama/Llama-3.1-8B-Instruct
HF_CHAT_COMPLETIONS_URL=https://router.huggingface.co/v1/chat/completions
HF_WAIT_FOR_MODEL=true

# AILabTools / AILabAPI virtual try-on
AILAB_API_KEY=
AILAB_API_BASE=https://www.ailabapi.com
AILAB_TIMEOUT_MS=60000

# Supabase + Kaggle fashion dataset import
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_PUBLISHABLE_KEY=
SUPABASE_STORAGE_BUCKET=fashion-products
SUPABASE_S3_ENDPOINT=
SUPABASE_S3_REGION=us-east-1
SUPABASE_S3_ACCESS_KEY_ID=
SUPABASE_S3_SECRET_ACCESS_KEY=
SUPABASE_S3_FORCE_PATH_STYLE=true

# Optional: store product images in an external S3-compatible bucket (Tebi / R2 / B2 / S3).
# If set, these override SUPABASE_S3_* for image uploads.
PRODUCT_IMAGE_S3_BUCKET=
PRODUCT_IMAGE_S3_ENDPOINT=
PRODUCT_IMAGE_S3_REGION=us-east-1
PRODUCT_IMAGE_S3_ACCESS_KEY_ID=
PRODUCT_IMAGE_S3_SECRET_ACCESS_KEY=
PRODUCT_IMAGE_S3_FORCE_PATH_STYLE=false
# Public base URL for browsers (bucket/prefix must be publicly readable).
PRODUCT_IMAGE_PUBLIC_BASE_URL=
KAGGLEHUB_TOKEN=
FASHION_DATASET_DIR=./data/fashion-product-images-dataset
FASHION_STYLES_CSV=
FASHION_IMAGES_DIR=
FASHION_SOURCE=fashion-product-images-kaggle
FASHION_DATASET_NAME=Fashion Product Images Dataset
FASHION_BATCH_SIZE=100
FASHION_MAX_ITEMS=0
FASHION_UPLOAD_IMAGES=true
FASHION_ONLY_TOPWEAR=true
CATALOG_API_URL=http://localhost:5001
