# Public app URL used for backend Socket.IO CORS and client callbacks
PUBLIC_APP_URL=https://app.example.com

# Image tags produced by CI/CD
FRONTEND_IMAGE=ghcr.io/panda2206/ai-fit-room-frontend:latest
BACKEND_IMAGE=ghcr.io/panda2206/ai-fit-room-backend:latest
RAG_IMAGE=ghcr.io/panda2206/ai-fit-room-rag-service:latest

# Optional custom host port for reverse-proxy
PROXY_PORT=80

# Backend + Weaviate
WEAVIATE_API_KEY=replace-with-strong-key
RAG_TIMEOUT_MS=25000

# LLM provider keys (set only what you use)
OPENAI_API_KEY=
HF_API_TOKEN=
HUGGINGFACE_API_KEY=
HF_MODEL=mistralai/Mistral-7B-Instruct-v0.2
HF_FALLBACK_MODEL=meta-llama/Llama-3.1-8B-Instruct
HF_CHAT_COMPLETIONS_URL=https://router.huggingface.co/v1/chat/completions
HF_WAIT_FOR_MODEL=true
